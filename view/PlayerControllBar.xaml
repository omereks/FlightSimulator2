<UserControl x:Class="FlightSimulator2.view.PlayerControllBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:FlightSimulator2.view"
             xmlns:local="clr-namespace:FlightSimulator2.view"
             mc:Ignorable="d" 
             >
    <Grid>
        <Slider Minimum="0" Maximum="{Binding VM_Number_of_rows}" Value="{Binding VM_Current_line, Mode=TwoWay}"  HorizontalAlignment="Left" Margin="0,4,0,0" VerticalAlignment="Top" Width="336" Background="Black"/>
        <Button x:Name="playOrPause" Content="Pause" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="44" Height="20" Click="Play_Click"/>
        <view:SpeedRatio  x:Name="sr" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="201,33,0,0" />
    </Grid>
</UserControl>
