<UserControl x:Class="FlightSimulator2.view.FeaturesGraphV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:local="clr-namespace:FlightSimulator2.view" 
             xmlns:viewmodel="clr-namespace:FlightSimulator2.viewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:FeaturesGraphVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="800" Height="450">
        <Grid.ColumnDefinitions Width="4*"/>
        <Grid.RowDefinitions Width="4*"/>
        <ListBox x:Name="featuresListBox" SelectionChanged="featuresListBox_SelectionChanged" ItemsSource="{Binding VM_FeaturesArr}" Grid.Row="0" Grid.Column="0" Width="200" Margin="10,10,590,158"/>
        <oxy:Plot x:Name="FeaturesGraph" Title="Feature"  Margin="238,11,298,239">
            <oxy:Plot.Series>
                <oxy:LineSeries  ItemsSource="{Binding VM_Points}" />
            </oxy:Plot.Series>
        </oxy:Plot>

        <oxy:Plot x:Name="CorrelationGraph" Title="Correlated Feature" Margin="526,10,10,239">
            <oxy:Plot.Series>
                <oxy:LineSeries  ItemsSource="{Binding  }" />
            </oxy:Plot.Series>
        </oxy:Plot>
    </Grid>
</UserControl>
